---
// Skills section component
// This section displays the user's technical skills
---

<section id="section-2" class="min-h-screen w-full flex items-center justify-center" role="region" aria-labelledby="skills-heading">
  <div class="text-center text-white max-w-4xl px-8 animate-slide-up">
    <h2 id="skills-heading" class="text-5xl md:text-7xl font-bold mb-12 drop-shadow-lg">
      My skills:
    </h2>
    <div class="glass-box p-8 md:p-12">
      <ul class="text-left text-lg md:text-xl space-y-4 drop-shadow-md" role="list" aria-label="Technical skills">
        <li class="flex items-center" role="listitem">
          <span class="w-3 h-3 bg-yellow-400 rounded-full mr-4" aria-hidden="true"></span>
          Python
        </li>
        <li class="flex items-center" role="listitem">
          <span class="w-3 h-3 bg-orange-400 rounded-full mr-4" aria-hidden="true"></span>
          HTML
        </li>
        <li class="flex items-center" role="listitem">
          <span class="w-3 h-3 bg-blue-400 rounded-full mr-4" aria-hidden="true"></span>
          CSS
        </li>
        <li class="flex items-center" role="listitem">
          <span class="w-3 h-3 bg-yellow-300 rounded-full mr-4" aria-hidden="true"></span>
          JavaScript
        </li>
        <li class="flex items-center" role="listitem">
          <span class="w-3 h-3 bg-purple-400 rounded-full mr-4" aria-hidden="true"></span>
          Machine Learning
        </li>
      </ul>
    </div>
  </div>
</section> 